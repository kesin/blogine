:coffee
  window.onload = ->
    show = document.getElementById('showTime')
    calDate = (h) ->
      if h >= 0 and h <= 9
        h = '0' + h
      else
        h
    setInterval (->
      time = new Date
      m = time.getMonth() + 1
      t = time.getFullYear() + '-' + calDate(m) + '-' + time.getDate() + ' ' + calDate(time.getHours()) + ':' + calDate(time.getMinutes()) + ':' + calDate(time.getSeconds())
      show.innerHTML = t
      return
    ), 500
    return