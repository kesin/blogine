%h1 Listing columns

%table
  %thead
    %tr
      %th Name
      %th Ident
      %th Posts count
      %th
      %th
      %th

  %tbody
    - @columns.each do |column|
      %tr
        %td= column.name
        %td= column.ident
        %td= column.posts_count
        %td= link_to 'Show', column
        %td= link_to 'Edit', edit_column_path(column)
        %td= link_to 'Destroy', column, :method => :delete, :data => { :confirm => 'Are you sure?' }

